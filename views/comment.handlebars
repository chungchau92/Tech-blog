<div class="p-5"> 
    <div class="border border-5 border-dark mb-4">
        {{!-- title --}}
        <div class="p-4 py-2 d-flex justify-content-between" style="background-color: #231010; color: white">
            <h3 class="title-post">{{post.title}}</h3>
            <h4 class="detail-post">Posted by {{post.user.username}} on {{format_date post.date_created}}</h4>
        </div>
        {{!-- content --}}
        <div class="form-outline mb-2 px-4 py-2" style="color: #333">
            <div class="content-post">{{post.content}}</div>
        </div>
    </div>

    {{!-- COmment --}}
    {{#each comments as |comment|}}
    <div class="border border-5 border-dark mb-4">
        <div class="p-4 py-2" style="background-color: #231010; color: white; height: 58px"></div>

        <div class="px-4 py-2" style="color: #333">
            <div class="my-3" id="comment">{{comment.comment}}</div>
            <div class="my-3">{{comment.user.username}}, {{format_date comment.date_created}}</div>
        </div>
    </div>
    {{/each}}

    {{!-- submit comment --}}
    <div class="border border-5 border-dark mb-4">
        
        <div class="p-4 py-2" style="background-color: #231010; color: white; height: 58px"></div>

        <label class="px-4 py-2">Comment</label>
        <div class="px-4 d-grid" style="color: #333">
            <textarea class="my-2 form-control" id="input-comment"></textarea>
            <button data-id="{{post.id}}" id="btn-create-comment" type="submit" class="btn btn-block bg-secondary text-white-50 my-3">Submit</button>
        </div>
    </div>
</div>
<script src="../../../js/comment.js"></script> 
