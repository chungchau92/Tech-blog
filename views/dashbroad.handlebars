
{{!-- Form create post --}}
<div class="p-5"> 
     <form class="border border-5 border-dark" id="form" style="display: none">
        <div class="ps-4 py-2" style="background-color: #231010;">
            <h3 style="color: #d9ead3;">Create new post</h3>
        </div>
        <!-- title input -->
        <div class="form-outline mb-2 px-4 py-2">
            <label class="form-label" for="title-input">Title</label>
            <input type="text" id="title-input" class="form-control" />
        </div>

        <!-- Content input -->
        <div class="form-outline mb-3 px-4">
            <label class="form-label" for="content-input">Content</label>
            <textarea type="text" id="content-input" class="form-control"></textarea>
        </div>

        <!-- Create button -->
        <div class="d-grid px-4 " >
            <button type="submit" class="btn btn-primary btn-block mb-2 bg-secondary text-white-50" >Create</button>
        </div>
    
    </form>
</div>

{{!-- button  --}}
<div class="d-flex justify-content-center">
  <button class="btn m-4 btn-new-post" type="button" style="background-color: #231010; color: white; font-size: 1.6rem;">+ New Post</button>
</div>

