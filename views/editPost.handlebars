{{!-- Form update and delete post --}}
<div class="p-5 form-edit"> 
     <form class="border border-5 border-dark" id="form-edit">
        <div class="ps-4 py-2" style="background-color: #231010;">
            <h3 style="color: #d9ead3;">Edit post</h3>
        </div>
        <!-- title input -->
        <div class="form-outline mb-2 px-4 py-2">
            <label class="form-label" for="title-edit-input">Title</label>
            <input type="text" id="title-edit-input" class="form-control" />
        </div>

        <!-- Content input -->
        <div class="form-outline mb-3 px-4">
            <label class="form-label" for="content-edit-input">Content</label>
            <textarea type="text" id="content-edit-input" class="form-control"></textarea>
        </div>

        <!-- Create button -->
        <div class="d-grid px-4 " >
            <button type="submit" class="btn btn-primary btn-block mb-2 bg-secondary" id="btn-update-post">Update post</button>
            <button type="submit" class="btn btn-primary btn-block mb-2 bg-secondary" id="btn-delete-post">Delete post</button>
        </div>
    
    </form>
</div>